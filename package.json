{
  "name": "notes",
  "version": "1.0.0",
  "description": "A lightweight, battery-optimized Electron-based iCloud Notes launcher.",
  "main": "main.js",
  "author": "Pauri",
  "license": "MIT",
  "build": {
    "appId": "com.pauri.notes",
    "productName": "Notes",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist"
    ],
    "win": {
      "icon": "icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron": "^25.1.8"
  },
  "devDependencies": {
    "electron-builder": "^25.1.8"
  }
}
