{
  "name": "icloud-notes",
  "version": "1.0.0",
  "description": "A simple Electron app to access iCloud Notes.",
  "author": "Paari",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "package": "electron-builder --windows"
  },
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.icloud.notes",
    "productName": "iCloud Notes",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true
    }
  },
  "files": [
    "dist/",
    "node_modules/",
    "main.js",
    "icon.ico"
  ]
}
